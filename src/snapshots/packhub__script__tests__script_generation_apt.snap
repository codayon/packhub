#!/bin/sh

echo "Welcome to package key and repository setup script for OpenBangla-Keyboard"
echo "This script will add the repository key and repository to your system."
echo "Please make sure you have sudo access to run this script."
echo
echo "Installing GnuPG for key verification..."
sudo apt-get install gpg -y
echo
echo "Downloading and installing the repository key..."
wget -qO- http://localhost:3000/keys/packhub.asc | gpg --dearmor > packhub.gpg
sudo install -D -o root -g root -m 644 packhub.gpg /etc/apt/keyrings/packhub.gpg
echo
echo "Adding the repository to your system..."
echo "deb [signed-by=/etc/apt/keyrings/packhub.gpg] http://localhost:3000/apt/github/OpenBangla/OpenBangla-Keyboard stable main" > /etc/apt/sources.list.d/OpenBangla-Keyboard.list
echo 
echo "Updating package lists..."
sudo apt-get update
